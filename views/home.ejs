<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <style>
      body {
        background: #f8f9fb;
        font-family: "Poppins", sans-serif;
      }
      .navbar {
        background: #fff !important;
        border-bottom: 1.5px solid #e9ecef;
        box-shadow: 0 2px 7px #e9ecef33;
        padding-top: 12px;
        padding-bottom: 12px;
      }
      .navbar-brand {
        font-weight: 700;
        font-size: 1.7rem;
        color: #232323 !important;
        letter-spacing: 0.2px;
      }
      .nav-btn {
        border-radius: 0.8em;
        font-size: 1.08em;
        font-weight: 500;
        padding: 7px 20px;
        transition: 0.2s;
      }
      .btn-logout {
        background: #dc3545 !important;
        color: #fff !important;
        border: none;
      }
      .btn-logout:hover {
        background: #b31c2e !important;
      }
      .main-container {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 28px;
        align-items: flex-start;
        margin-top: 38px;
      }
      .table-container {
        width: 100%;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 18px #eaeaea70;
        padding: 28px 30px 22px 30px;
        min-height: 330px;
      }
      .table {
        border-radius: 8px;
        overflow: hidden;
        margin-top: 7px;
      }
      .table thead {
        background-color: #232323;
        color: #fff;
        font-weight: 600;
      }
      .table th,
      .table td {
        padding: 12px 14px;
        font-size: 14px;
      }
      .table th {
        font-size: 15px;
      }
      .card-esp32 {
        width: 100%;
        max-width: 370px;
        min-width: 270px;
        border-radius: 17px;
        background: #fff;
        box-shadow: 0 8px 24px #d7d7db46;
        border: none;
        margin-bottom: 25px;
        transition: 0.22s;
        position: relative;
      }
      .card-esp32:hover {
        box-shadow: 0 12px 28px #d7d7db6b;
      }
      .card-warning {
        background-color: #fff7e1 !important;
      }
      .status-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        align-items: flex-end;
      }
      .card-title {
        font-weight: 700;
        font-size: 1.22rem;
        color: #232323;
        letter-spacing: 0.3px;
      }
      .status-icon {
        width: 37px;
        height: 37px;
        border-radius: 50%;
        margin: 13px auto 6px auto;
        display: block;
        box-shadow: 0 1px 8px #c4c4c4a3;
      }
      .bg-success {
        background-color: #28a745 !important;
      }
      .bg-danger {
        background-color: #dc3545 !important;
      }
      .bg-warning {
        background-color: #ffc107 !important;
      }
      .card-text strong {
        font-weight: 700;
      }
      @media (max-width: 1000px) {
        .main-container {
          display: flex;
          flex-direction: column;
          gap: 28px;
        }
        .status-container {
          align-items: stretch;
        }
      }
      @media (max-width: 600px) {
        .table-container {
          padding: 14px 4px 10px 4px;
        }
        .navbar-brand {
          font-size: 1.15rem;
        }
        .main-container {
          margin-top: 20px;
        }
      }
    </style>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg sticky-top py-3 shadow-sm"
      style="background: #fff"
    >
      <div
        class="container-fluid d-flex justify-content-between align-items-center"
      >
        <div class="d-flex align-items-center gap-2">
          <span
            class="navbar-brand mb-0 fw-bold fs-4"
            style="letter-spacing: 0.2px"
            >ESP32 Status</span
          >
        </div>
        <div class="d-flex align-items-center gap-2">
          <!-- DROPDOWN AVATAR USER -->
          <div class="dropdown">
            <button
              class="btn btn-light rounded-circle d-flex align-items-center justify-content-center"
              id="dropdownUserBtn"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              style="width: 44px; height: 44px; border: 1.5px solid #eee"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                height="23"
                viewBox="0 0 24 24"
                stroke="#1c1c1c"
              >
                <circle cx="12" cy="8" r="4" />
                <path d="M6 20c0-2.2 3.6-4 6-4s6 1.8 6 4" />
              </svg>
            </button>
            <ul
              class="dropdown-menu dropdown-menu-end shadow"
              aria-labelledby="dropdownUserBtn"
              style="min-width: 220px"
            >
              <li>
                <span class="dropdown-item-text fw-semibold"> ðŸ‘¤ User </span>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a class="dropdown-item" href="/logs">
                  <i class="bi bi-journal-text me-2"></i> Logs
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/number">
                  <i class="bi bi-person-plus me-2"></i> Number
                </a>
              </li>
              <li>
                <a class="dropdown-item" href="/device">
                  <i class="bi bi-cpu me-2"></i> Device
                </a>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li>
                <a class="dropdown-item text-danger" href="/auth/logout">
                  <i class="bi bi-box-arrow-right me-2"></i> Logout
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <% const alarmUsers = (typeof activeUserAlarms !== "undefined" ?
    activeUserAlarms : []).map(u => ({ number: u, type: "Alarm" })); const
    brankasUsers = (typeof activeUserBrankas !== "undefined" ? activeUserBrankas
    : []).map(u => ({ number: u, type: "Brankas" })); const activeUsers =
    alarmUsers.concat(brankasUsers); %>

    <div class="container main-container">
      <!-- TABEL USER -->
      <div class="table-container">
        <h5 class="mb-3 fw-semibold">ðŸ“² User WhatsApp Aktif</h5>
        <div class="table-responsive">
          <table class="table table-sm table-bordered mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width: 54px">No</th>
                <th>Nomor WhatsApp</th>
                <th>Tipe User</th>
              </tr>
            </thead>
            <tbody>
              <% if (activeUsers.length === 0) { %>
              <tr>
                <td colspan="3" class="text-muted">Tidak ada user aktif</td>
              </tr>
              <% } else { %> <% activeUsers.forEach((user, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= user.number %></td>
                <td><%= user.type %></td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- CARD ESP32 -->
      <div class="status-container">
        <% esp32Devices.forEach((device) => { %>
        <div
          class="card-esp32 p-4 text-center <% if (device.name === 'ESP32-001' && device.alarm) { %> card-warning <% } %>"
        >
          <div class="card-body">
            <h5 class="card-title">
              <% if (device.name === 'ESP32-001') { %> ESP32-Alarm <% } else if
              (device.name === 'ESP32-002') { %> ESP32-Brankas <% } else { %>
              <%= device.name %> <% } %>
            </h5>
            <span
              class="status-icon <% if (device.name === 'ESP32-001' && device.alarm) { %> bg-warning <% } else if (device.status === 'Connected') { %> bg-success <% } else { %> bg-danger <% } %>"
            ></span>
            <p class="card-text mt-2 mb-0">
              Status: <strong><%= device.status %></strong>
            </p>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.getElementById("logoutBtn").onclick = () =>
        (location.href = "/auth/logout");
      document.getElementById("logoutBtn").addEventListener("click", () => {
        window.location.href = "/auth/logout";
      });
      setInterval(() => {
        window.location.reload();
      }, 5000);
    </script>
  </body>
</html>
